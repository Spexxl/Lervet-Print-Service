# ===== CONFIGURAÇÃO DO BACKEND =====
BACKEND_URL=https://lervet-lervet-token-backend.lwzypg.easypanel.host

# ===== CONFIGURAÇÃO DA IMPRESSORA =====
# Opções: 'usb', 'network', 'tmusb'
PRINTER_MODE=usb

# Para modo USB - deixe vazio para auto-detectar ou especifique a porta
# Exemplos Windows: COM1, COM3, COM4
# Exemplos Linux/Mac: /dev/ttyUSB0, /dev/ttyACM0
PRINTER_PORT=

# Para modo NETWORK
PRINTER_IP=192.168.1.100
PRINTER_IP_PORT=9100

# ===== CONFIGURAÇÕES GERAIS =====
NOME_ESTABELECIMENTO=Minha Empresa
RECONNECT_DELAY=5000
MAX_RECONNECT_ATTEMPTS=999

# ===== CONFIGURAÇÕES DE DEBUG =====
# Ativar logs detalhados (true/false)
DEBUG=false
